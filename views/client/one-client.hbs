{{#with client}}
    <h2>{{name}}</h2>

    <table class="one-client-table">
        <tbody>
                <tr>
                    <th>Email</th>
                    <td><a href="mailto:{{email}}">{{email}}</a></td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{name}}</td>
                </tr>
                <tr>
                    <th>Contact date</th>
                    <td>{{nextContactAt}}</td>
                </tr>
                {{#if notes}}
                    <tr>
                        <th>Notes</th>
                        <td>{{notes}}</td>
                    </tr>
                {{/if}}
        </tbody>
    </table>
{{/with}}

{{> go-back-to-clients}}